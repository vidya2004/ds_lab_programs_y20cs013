partially accepted
**********

#include<stdio.h>
long int arr[10000000][3];
main()
{
    long long int n,o,i,j,k;
    scanf("%lld %lld",&n,&o);
    for(i=0;i<o;i++)
    {
        for(j=0;j<3;j++)
        {
            scanf("%lld",&arr[i][j]);
        }
    }
    long long int m[1000000];
    
    for(i=0;i<n;i++)
    {
        m[i]=0;
    }
    for(k=0;k<o;k++)
    {
        for(i=arr[k][0]-1;i<arr[k][1];i++)
        {
            m[i]=m[i]+arr[k][2];   
        }
    }
    long long int max=0;
    for(i=0;i<n;i++)
    {
       if(m[i]>max)
       {
           max=m[i];
       }
    }
    printf("%lld",max);
    
    
}
